{
  "name": {
    "en": "Computherm E400RF"
  },
  "class": "thermostat",
  "capabilities": [
    "target_temperature",
    "measure_temperature"
  ],
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
